<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainContent">

    <ImageView
    android:id="@+id/bg_taskbar"
    android:layout_width="0dp"
    android:layout_height="161px"
    android:scaleType="fitXY"
    app:layout_constraintBottom_toTopOf="@+id/data_bg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/taskbar_bg" />

    <ImageView
        android:id="@+id/btn_content_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_taskbar"
        app:layout_constraintEnd_toEndOf="@+id/bg_taskbar"
        app:layout_constraintStart_toStartOf="@+id/bg_taskbar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_title" />

    <ImageView
        android:id="@+id/data_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/data_teks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_taskbar"
        app:srcCompat="@drawable/content_bg" />

    <TextView
        android:id="@+id/data_teks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="90px"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/data_deskripsi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_bg" />

    <ImageView
        android:id="@+id/iv_MainContent_gambar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/data_bg"
        app:layout_constraintEnd_toEndOf="@+id/data_bg"
        app:layout_constraintStart_toStartOf="@+id/data_bg"
        app:layout_constraintTop_toTopOf="@+id/data_bg"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/data_deskripsi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:text="TextView"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/data_teks"
        app:layout_constraintStart_toStartOf="@+id/data_teks"
        app:layout_constraintTop_toBottomOf="@+id/data_teks" />

</android.support.constraint.ConstraintLayout>